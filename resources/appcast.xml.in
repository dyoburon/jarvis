<?xml version="1.0" encoding="utf-8"?>
<!--
  appcast.xml.in - Sparkle auto-update feed template
  
  This is a template file. The actual appcast.xml is generated during
  the release process with version, download URL, and signature filled in.
  
  Variables (replaced by GitHub Actions):
    ${VERSION}           - Version number (e.g., "1.2.0")
    ${DOWNLOAD_URL}      - URL to download the DMG
    ${DMG_LENGTH}        - DMG file size in bytes
    ${ED_SIGNATURE}      - Sparkle EdDSA signature
    ${RELEASE_NOTES}     - HTML release notes
    ${PUB_DATE}          - Publication date (RFC 2822 format)
-->
<rss version="2.0" xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>Jarvis Updates</title>
    <link>https://github.com/YOUR_USERNAME/jarvis/releases</link>
    <language>en</language>
    
    <!-- Latest Release -->
    <item>
      <title>Version ${VERSION}</title>
      <pubDate>${PUB_DATE}</pubDate>
      <sparkle:version>${VERSION}</sparkle:version>
      <sparkle:shortVersionString>${VERSION}</sparkle:shortVersionString>
      <sparkle:minimumSystemVersion>12.0</sparkle:minimumSystemVersion>
      
      <description><![CDATA[
        ${RELEASE_NOTES}
      ]]></description>
      
      <enclosure 
        url="${DOWNLOAD_URL}"
        sparkle:edSignature="${ED_SIGNATURE}"
        length="${DMG_LENGTH}"
        type="application/octet-stream"/>
    </item>
    
